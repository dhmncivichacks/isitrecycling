{
  "name": "recycle",
  "version": "1.0.0",
  "description": "Is it recycling?",
  "main": "index.js",
  "scripts": {
    "test": "jasmine",
    "watch:test": "chokidar '**/*.js' -c 'npm test'",
    "build:js": "browserify index.js -t babelify | uglifyjs --compress --mangle > build.js",
    "watch:js": "watchify index.js -t babelify -t livereactload -t cssify --debug --verbose -o build.js",
    "reload:html": "browser-sync start --server --no-ui --files \"index.html\"",
    "reload:js": "npm run watch:js & livereactload monitor build.js & wait",
    "dev": "npm run reload:js & npm run reload:html",
    "build": "NODE_ENV=production npm run build:js"
  },
  "author": "Chris Jaure",
  "license": "ISC",
  "dependencies": {
    "addressit": "^1.2.1",
    "es6-promise": "^2.2.0",
    "moment": "^2.10.3",
    "number-to-words": "^1.1.0",
    "parse-address": "0.0.4",
    "react": "^0.13.3",
    "whatwg-fetch": "^0.9.0"
  },
  "devDependencies": {
    "babelify": "^5.0.5",
    "browser-sync": "^2.7.6",
    "browserify": "^8.1.3",
    "chokidar-cli": "^0.2.1",
    "cssify": "^0.7.0",
    "jasmine-es6": "0.0.3",
    "livereactload": "^0.5.2",
    "react-spinkit": "^1.1.2",
    "uglify-js": "^2.4.23",
    "watchify": "^2.6.2"
  }
}
