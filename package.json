{
  "name": "react-boilerplate",
  "version": "2.0.0",
  "description": "React ES6 Browserify boilerplate",
  "repository": {
    "type": "git",
    "url": "http://github.com/chrisjaure/react-boilerplate.git"
  },
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:js": "browserify index.js -t babelify | uglifyjs --compress --mangle > build.js",
    "watch:js": "watchify index.js -t babelify -t livereactload --debug --verbose -o build.js",
    "reload:html": "browser-sync start --server --files \"index.html\"",
    "reload:js": "npm run watch:js & livereactload monitor build.js & wait",
    "dev": "npm run reload:js & npm run reload:html",
    "build": "NODE_ENV=production npm run build:js"
  },
  "keywords": [
    "boilerplate",
    "react",
    "es6"
  ],
  "author": "Chris Jaure",
  "license": "ISC",
  "dependencies": {
    "react": "^0.13.3"
  },
  "devDependencies": {
    "babelify": "^5.0.5",
    "browser-sync": "^2.7.6",
    "browserify": "^8.1.3",
    "livereactload": "^0.5.2",
    "uglify-js": "^2.4.23",
    "watchify": "^2.6.2"
  }
}
